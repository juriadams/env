{
  "name": "@juriadams/env",
  "version": "0.0.1",
  "private": false,
  "description": "A simple and type-safe way to validate environment variables.",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint . && biome check .",
    "format": "biome lint --write . && biome format --write . && biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "tsup": "8.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": ["dist/index.d.ts"]
    }
  }
}
